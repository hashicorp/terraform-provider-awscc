    },
    "GrantName": {
      "description": "Name for the created Grant.",
      "type": "string"
    },
    "LicenseArn": {
      "description": "License Arn for the grant.",
      "$ref": "#/definitions/Arn"
    },
    "HomeRegion": {
      "description": "Home region for the created grant.",
