    "tagUpdatable": true,
    "cloudFormationSystemTags": true,
    "tagProperty": "/properties/Tags",
    "permissions": [
      "deadline:TagResource",
      "deadline:UntagResource",
      "deadline:ListTagsForResource"
    ]
  },
  "handlers": {
